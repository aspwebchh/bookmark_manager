*{ margin:0; padding:0;}
body { font-family: 'Segoe UI', sans-serif; font-size:12px;}
ul,li{ list-style:none;}

.nav {  width:200px; border-right:1px solid #ccc; overflow:auto; float:left; border-right:5px solid rgb(235, 239, 249); padding-top:10px;}

.tree li{ margin-left:15px; padding:1px 0;}
.tree li.selected>a>span{background-color:blue;color:white;}
.tree li.select>a>span{background-color:blue;color:white;}

.tree a{ display:inline-block; text-indent:20px; background-repeat:no-repeat; cursor:default;}
.tree a.open{ background-image:url(images/open.png); }
.tree a.close{ background-image:url(images/close.png);}
.tree a input{  width:80px;}


.tree .node_leaf a{ margin-left:16px;}

.tree .icon{ display:inline-block; transform: rotate(-90deg); transition: all 150ms;background: url(images/state.svg) no-repeat center center; background-size: 8px 5px; display: inline-block; height: 16px; opacity: .6; position: relative;vertical-align: top;width: 16px;}
.tree .icon.open {transform: rotate(0);}

 .menu{ position:absolute; border:1px solid #ccc;box-shadow:1px 1px 2px #333333; background:#fff; padding:2px 0; z-index:999; cursor:default;}
 .menu li{ padding:4px 10px;}
 .menu li.selected{background-color:#eee;}


 .page_list{ float:left; padding-left:20px; padding-top:5px;}
 .page_list li{ padding:3px 0; cursor: default;}
 .page_list input{display:inline-block;}
 .page_list .title input{ width:100px;}
.page_list .url input{ width:150px;}


/*收藏*/
.popup table{ width:300px;}
.popup table th, .popup table td{ padding:5px;}
.popup table th{ width:50px; text-align:left; font-weight:normal;}
.popup table .cate{ height:200px; overflow:auto; border:1px solid #ccc; padding-top:10px;}
.popup table input[type=text]{ border:1px solid #ccc; padding:3px 5px; width:210px;}
.popup input[type=button]{ padding:3px 10px;}
.popup input[type=button].ok{}
.popup input[type=button].update{ margin-left:10px;}
.popup .error_msg{ color:red; display:inline-block; margin-left:5px;}


.top{  height:60px; line-height:60px; font-size:20px;margin-left:20px; font-weight:bold;}
.header{ width:100%;padding:8px 0;border-top:1px solid rgb(156, 194, 239); background-color:rgb(235, 239, 249);}
.header p{ display:inline-block; font-weight:bold;}
.header p.t1{ width:200px; text-indent:20px;}
.header p.t2{ text-indent:10px;}